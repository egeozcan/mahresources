{
  "name": "mahresources-e2e",
  "version": "1.0.0",
  "description": "Playwright E2E tests for Mahresources",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:a11y": "playwright test tests/accessibility/",
    "test:a11y:headed": "playwright test tests/accessibility/ --headed",
    "report": "playwright show-report",
    "test:with-server": "node scripts/run-tests.js test",
    "test:with-server:headed": "node scripts/run-tests.js test --headed --workers=1",
    "test:with-server:debug": "node scripts/run-tests.js test --debug",
    "test:with-server:a11y": "node scripts/run-tests.js test tests/accessibility/"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "1.57.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
